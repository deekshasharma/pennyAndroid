<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_dark"
        android:id="@+id/relativeLayout">
        <TextView
            android:id="@+id/month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.38"
            android:text="MONTH"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="30dp"
            android:layout_alignTop="@+id/transaction"
            android:layout_toLeftOf="@+id/transaction"
            android:layout_toStartOf="@+id/transaction"
            android:layout_marginRight="107dp"
            android:layout_marginEnd="107dp"
            android:textColor="#fff8ffd3" />

        <TextView
            android:id="@+id/transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="59dp"
            android:layout_marginRight="59dp"
            android:layout_marginTop="79dp"
            android:text="DAYS LEFT"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="30dp"
            android:textColor="#fff8ffd3" />

        <TextView
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/month"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/month"
            android:layout_marginLeft="67dp"
            android:layout_marginStart="67dp"
            android:text="YEAR"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="30dp"
            android:textColor="#fff8ffd3" />

        <TextView
            android:text="FEB"
            android:id="@+id/getMonths"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_above="@+id/month"
            android:layout_toLeftOf="@+id/transaction"
            android:layout_toStartOf="@+id/transaction"
            android:layout_marginRight="129dp"
            android:layout_marginEnd="129dp"
            android:textColor="#fff8ffd3" />

        <TextView
            android:text="3"
            android:id="@+id/getTransactions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/month"
            android:layout_alignLeft="@+id/transaction"
            android:layout_alignStart="@+id/transaction"
            android:layout_marginLeft="47dp"
            android:layout_marginStart="47dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#fff8ffd3" />

        <TextView
            android:text="2015"
            android:id="@+id/getYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/year"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="73dp"
            android:layout_marginStart="73dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#fff8ffd3" />



    </RelativeLayout>

